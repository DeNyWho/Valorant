<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:tools="http://schemas.android.com/tools">

    <style name="NightAdjusted.Theme.Valorant" parent="android:Theme.Material.Light.NoActionBar" />

    <style name="Theme.Valorant" parent="NightAdjusted.Theme.Valorant">
        <item name="android:forceDarkAllowed" tools:targetApi="29">false</item>
    </style>

    <style name="NightAdjusted.Theme.Splash" parent="Theme.SplashScreen">
        <item name="android:windowLightStatusBar">true</item>
        <item name="android:windowLightNavigationBar" tools:targetApi="27">true</item>
    </style>

    <style name="Theme.Valorant.Splash" parent="NightAdjusted.Theme.Splash">
        <item name="windowSplashScreenAnimatedIcon">@drawable/valorant_logo_splash</item>
        <item name="postSplashScreenTheme">@style/Theme.Valorant</item>
    </style>
</resources>